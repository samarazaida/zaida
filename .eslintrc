{
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.3.2"
    }
  },
  "rules": {
    "indent": ["error", 2],
    "id-length": 0,
    "react/jsx-indent": [2],
    "react/jsx-indent-props": [2],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/anchor-is-valid": 0,
    "consistent-return": 0,
    "react/style-prop-object": 0,
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "import/no-extraneous-dependencies": 0
  },
  "globals": {
    "describe": true,
    "it": true
  }
}
